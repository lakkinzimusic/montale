{{> layouts/head }}
{{> layouts/header }}
<hr>
<div class="container login">


    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 login-main-part">
            <div class="box">
                <h2 class="text-center">ВХОД В АККАУНТ</h2>
                <p class="text-center">Нет учетной записи? <a class="registration-link" href="/signup">Зарегистрироваться</a>
                </p>
                {{#if errorMessages}}
                    {{#each errorMessages}}
                        <div class="alert alert-danger" role="alert">{{msg}}</div>
                    {{/each}}
                {{/if}}
                <form class="form-signin" action="/login" method="POST">

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Email или Логин</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="login"
                                   placeholder="Email или Логин *" value="{{oldInput.login}}">
                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Пароль</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" value="{{oldInput.password}}" name="password" placeholder="Пароль *">
                        </div>
                    </div>


                    <p class="text-center"><a class="registration-link" href="/reset">Забыли пароль?</a></p>

                    <button class="btn btn-outline-secondary btn-block" type="submit">ВОЙТИ</button>

                </form>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

{{> layouts/footer }}
