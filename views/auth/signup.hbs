{{> layouts/head }}
{{> layouts/header }}
<hr>
<div class="container signup">
    <div class="header">
        <h2 class="text-center">РЕГИСТРАЦИЯ</h2>
    </div>

    <hr>
    <div class="sign-in">
        <p>Уже зарегистрированы? <a href="/login">Войти</a></p>
    </div>
    {{#if errorMessages}}
        {{#each errorMessages}}
            <div class="alert alert-danger" role="alert">{{msg}}</div>
        {{/each}}
    {{/if}}
    <form class="form-signin" action="/signup" method="POST">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Логин*</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="username" placeholder="Логин *">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Email*</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="email" placeholder="Электронная почта*"
                       value={{oldInput.email}}>
            </div>
        </div>
        <div class="form-group row">
            <label for="phone" class="col-sm-2 col-form-label">Телефон</label>
            <div class="col-sm-10">
                <input type="text" class="form-control tel" name="phone" placeholder="Телефон"
                       value={{oldInput.phone}}>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Пароль* (минимум 6 символов)</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" placeholder="Пароль"
                       value="">
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label>Фамилия</label>
                    <input type="text" name="surname" class="form-control" placeholder="Фамилия" value={{oldInput.surname}}>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label>Имя</label>
                    <input type="text" name="firstname" class="form-control" placeholder="Имя" value={{oldInput.firstname}}>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label>Пол</label>
                    <select name="sex" class="form-control">
                        <option value="male">Мужской</option>
                        <option value="female">Женский</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label>Дата рождения</label>
                    <!--<input type="date" name="birthday" class="form-control" placeholder="Дата рождения">-->
                    <input type="text" class="datepicker-here dateinput" id="datepicker"  name="birthday"   date-format="dd.mm.yyyy"  placeholder="дд.мм.гггг" autocomplete="off" readonly value={{oldInput.birthday}}/>
                </div>
            </div>
            <!--<div class="col-md-4 col-sm-12">-->
                <!--<div class="form-group">-->
                    <!--<label>Страна</label>-->
                    <!--<select name="country" class="form-control" id="" placeholder="Страна">-->
                        <!--<option selected="selected" value="Россия">Россия</option>-->
                        <!--<option value="Франция">Франция</option>-->
                    <!--</select>-->
                <!--</div>-->
            <!--</div>-->
        </div>


        <div class="input d-flex flex-row justify-content-between">
            <button class="btn btn-outline-secondary btn-block" type="submit">ЗАРЕГИСТРИРОВАТЬСЯ</button>
        </div>
    </form>
</div>
</div>

{{> layouts/footer }}
