<div class="background-image d-none d-md-block">

</div>

<div class="container main">

    {{> bodyheader}}

    <h3 class="topic">НОВИНКИ</h3>
    {{#if paymentErrorMsg}}
        <div class="alert alert-warning" role="alert"> {{paymentErrorMsg}}</div>
    {{/if}}
    <hr>

    <div class="row" id="newProducts">
        {{#if newProducts.length}}
            {{#each newProducts  }}
                {{> productboxTEST isAuthenticated=../isAuthenticated category=this}}
            {{/each}}
        {{else}}

            <div class="alert alert-danger" role="alert">
                В данный момент новых продуктов нет нет
            </div>
        {{/if}}
    </div>
    <h3 class="topic">БЕСТСЕЛЛЕРЫ</h3>
    <hr>
    <div class="row">
        {{#if bestsellers.length}}
            {{#each bestsellers }}
                {{> productboxTEST isAuthenticated=../isAuthenticated category=this col_width=3}}
            {{/each}}
        {{else}}
            <div class="alert alert-danger" role="alert">
                В данный момент бестселлеров нет
            </div>
        {{/if}}
    </div>

    <h3 class="topic">КОЛЛЕКЦИИ</h3>
    <hr>

    <div class="row">
        {{#each collections }}
            {{> collectionbox}}
        {{/each}}
    </div>


