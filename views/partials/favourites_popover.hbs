<div id="cart_popover_inner">
    {{#checklength favourites_products 0}}
        <div id="cart_popover_items" class="sscroll"  data-simplebar>
            {{#each favourites_products}}
                <div class="row cart-row">
                    <div class="col-4">
                        <div class="cart-img">
                            <a href="/perfume/{{this.category.slug}}">
                                <img src="/{{this.category.products.[0].imageURL}}"/>
                            </a>
                        </div>
                    </div>

                    <div class="col-8">
                        <div id="row">
                            <p class="cart_popover_product_title">
                                {{this.category.category_name}}
                            </p>
                        </div>
                        <!--<div id="row">-->
                            <!--<span          onclick="addFavourite({{this.category.id}})" id="removeFavourite">Deleteeee</span>-->
                        <!--</div>-->
                    </div>


                </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-12"></div>
            <div class="col-md-8 col-sm-12">
                <a href="/account/favourites" class="btn btn-lg btn-block btn-cart-popover">Перейти в избранное</a>
            </div>
        </div>
    {{else}}
        <div class="cart-msg">
            Любимых товаров нет
        </div>
    {{/checklength}}
</div>
